<form action="/register" method="post" class="container w-50">
  <fieldset class="d-flex flex-column">
    <legend class="border-bottom pb-2">Registrar Usuario</legend>

    <div>
      <label for="name" class="form-label mt-1">Nome</label>
      <input 
        type="text" 
        id="name"
        name="name" 
        value="{{ name }}" 
        placeholder="Insira seu nome" 
        class="form-control bg-transparent" 
        required
      >
      {{#if messages.nameErr}}
        <p class="form-text text-danger mb-0">- {{messages.nameErr}}</p>
      {{/if}}
    </div>

    <div>
      <label for="email" class="form-label mt-3">Email</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        value="{{ email }}" 
        placeholder="Insira seu email" 
        class="form-control bg-transparent" 
        required
      >
      {{#if messages.emailErr}}
        <p class="form-text text-danger mb-0">- {{messages.emailErr}}</p>
      {{/if}}
    </div>

    <div>
      <label for="password" class="form-label mt-3">Senha</label>
      <input
        type="password" 
        id="password" name="password" 
        placeholder="Insira uma senha" 
        class="form-control bg-transparent" 
        required
      >
      {{#if messages.passwordErr}}
        <p class="form-text text-danger mb-0">- {{messages.passwordErr}}</p>
      {{/if}}
    </div>

    <div>
      <label for="confirm" class="form-label mt-3">Confirme</label>
      <input 
        type="password" 
        id="confirm" 
        name="confirmPassword" 
        placeholder="Confirme a sua senha" 
        class="form-control bg-transparent" 
        required
      >
      {{#if messages.passwordErr}}
        <p class="form-text text-danger mb-0">- {{messages.passwordErr}}</p>
      {{/if}}
    </div>  

    <button type="submit" class='mt-4 w-50 btn btn-outline-success align-self-center'>Registrar</button>

    <a href="/login" class="text-center m-4">Ja possui uma conta?</a>
  </fieldset>
</form>
